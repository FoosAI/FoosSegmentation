{
    "transforms":
    [
        {
            "name":"random_video_loader",
            "endswith":".mp4",
            "folder":".\\..\\..\\Data\\Raw\\RawMatchesContinuous\\",
            "output":"frame",
            "exclusions":[],
            "random":true,
            "value_loader":
            {
                "json":
                {
                    "constant":true,
                    "values_to_load":["rod_lines", "score_lines", "table"]
                }
            }
        },
        {
            "name":"require",
            "input":"frame"
        },
        {
            "name":"require",
            "input":"rod_lines"
        },
        {
            "name":"zeros_like",
            "reference":"frame",
            "output":"segmentation"
        },
        {
            "name":"draw_polygon",
            "input_frame":"segmentation",
            "input_polygon":"table",
            "fill":true,
            "width":1,
            "color":[0,0,255]
        },
        {
            "name":"draw_lines",
            "input_frame":"segmentation",
            "input_lines":"rod_lines",
            "width":10,
            "color":[255,0,255]
        },
        {
            "name":"draw_lines",
            "input_frame":"segmentation",
            "input_lines":"score_lines",
            "width":10,
            "color":[0,255,0]
        },
        {
            "name":"resize",
            "input":"frame",
            "output":"frame",
            "size":[256,512],
            "resize_mode":"stretch"  
        },
        {
            "name":"resize",
            "input":"segmentation",
            "output":"segmentation",
            "size":[256,512],
            "resize_mode":"stretch"  
        },
        {
            "name":"add_random_number",
            "output":"seed"
        },
        {
            "name":"randomize_frame",
            "p_seed":"seed",
            "input":"frame",
            "output":"frame",
            "chance_no_change":0.3,
            "zoom_range":[0.8, 1.2],
            "rotation_range":5,
            "width_shift_range":0.15,
            "height_shift_range":0.05,
            "shear_range":0.05,
            "fill_mode":"nearest",
            "gaussian_noise":0.03,
            "white_noise":0.03,
            "saturation_chance":0.5,
            "saturation_max_amount":0.5,
            "swap_channels":true,
            "invert_channels":false,
            "vertical_flip":false,
            "horizontal_flip":true
        },
        {
            "name":"randomize_frame",
            "p_seed":"seed",
            "input":"segmentation",
            "output":"segmentation",
            "chance_no_change":0.3,
            "zoom_range":[0.8, 1.2],
            "rotation_range":5,
            "width_shift_range":0.15,
            "height_shift_range":0.05,
            "shear_range":0.05,
            "fill_mode":"nearest",
            "gaussian_noise":0.00,
            "white_noise":0.00,
            "saturation_chance":0.5,
            "saturation_max_amount":0.0,
            "swap_channels":false,
            "invert_channels":false,
            "vertical_flip":false,
            "horizontal_flip":true
        },
        {
            "name":"normalize_channels",
            "input":"frame",
            "output":"frame",
            "max":1.0,
            "min":0.0
        },
        {
            "name":"normalize_channels",
            "input":"segmentation",
            "output":"segmentation",
            "max":1.0,
            "min":0.0
        }
    ]
}
