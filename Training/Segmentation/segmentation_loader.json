{
    "transforms":
    [
        {   "_comment_": "-------- Load the paired (frame_step=2) frame+segmentation videos --------"},
        {
            "name":"random_video_loader",
            "frame_step":2,
            "exclusions":[],
            "endswith":"Copy.avi",
            "folder":".\\..\\..\\Data\\Processed\\Segmentation\\",
            "outputs":["frame","segmentation"],
            "random":true,
            "value_loader":
            {
            },
            "repeats":
            [
                {
                    "match_type":"partial_match_filename",
                    "value_match":"_basic_",
                    "repeat_times":2
                }
            ]
        },
        {
            "name":"require",
            "input":"frame"
        },
        {
            "name":"require",
            "input":"segmentation"
        },

        {   "_comment_": "-------- Randomize the frame and segmentation map the exact same way --------"},
        {
            "name":"add_random_number",
            "output":"seed"
        },
        {
            "name":"randomize_frame",
            "p_seed":"seed",
            "input":"frame",
            "output":"frame",
            "chance_no_change":0.3,
            "zoom_range":[0.8, 1.2],
            "rotation_range":5,
            "width_shift_range":0.15,
            "height_shift_range":0.05,
            "shear_range":0.05,
            "fill_mode":"nearest",
            "gaussian_noise":0.03,
            "white_noise":0.03,
            "saturation_chance":0.5,
            "saturation_max_amount":0.5,
            "swap_channels":true,
            "invert_channels":false,
            "vertical_flip":false,
            "horizontal_flip":true
        },
        {
            "name":"randomize_frame",
            "p_seed":"seed",
            "input":"segmentation",
            "output":"segmentation",
            "chance_no_change":0.3,
            "zoom_range":[0.8, 1.2],
            "rotation_range":5,
            "width_shift_range":0.15,
            "height_shift_range":0.05,
            "shear_range":0.05,
            "fill_mode":"nearest",
            "gaussian_noise":0.00,
            "white_noise":0.00,
            "saturation_chance":0.5,
            "saturation_max_amount":0.0,
            "swap_channels":false,
            "invert_channels":false,
            "vertical_flip":false,
            "horizontal_flip":true
        },

        {   "_comment_": "-------- Normalize both images on range 0.0 to 1.0 per channel --------"},
        {
            "name":"normalize_channels",
            "input":"frame",
            "output":"frame",
            "max":1.0,
            "min":0.0
        },
        {
            "name":"normalize_channels",
            "input":"segmentation",
            "output":"segmentation",
            "max":1.0,
            "min":0.0
        },

        {   "_comment_": "-------- Result: 'frame' has training input, 'segmentation' has training output. --------"}
    ]
}
